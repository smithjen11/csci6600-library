<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Users</h1>

  <table class="table table-striped table-condensed datatable">
    <thead>
      <tr>
        <th>Email</th>
        <th>Status</th>
        <th>Admin?</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.email %></td>
          <td><%= user.account_status ? 'Active' : 'Inactive' %></td>
          <td><%= user.admin %></td>
          <td><%= link_to 'Edit', edit_user_path(user), class: 'btn btn-warning' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>