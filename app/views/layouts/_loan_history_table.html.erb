<table class="table table-striped table-condensed datatable">
<thead>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Author</th>
    <th>Publish year</th>
    <th>Checked out</th>
    <th>Returned</th>
    <th></th>
  </tr>
</thead>

<tbody>
  <% books.each do |book| %>
    <tr>
      <td><%= image_tag book.image_url, size: '30' %></td>
      <td><%= link_to book.title, book %></td>
      <td><%= book.author %></td>
      <td><%= book.publish_year %></td>
      <td><%= book.date_borrowed %></td>
      <td><%= book.date_returned %></td>
      <td><%= link_to 'Show', book, class: 'btn btn-info' %></td>
    </tr>
  <% end %>
</tbody>
</table>
