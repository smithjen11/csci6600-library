<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author last name</th>
      <th>Author first name</th>
      <th>Isbn</th>
      <th>Publish year</th>
      <th>Genre</th>
      <th>Reading level</th>
      <th>Subject</th>
      <th>Language</th>
      <th>Length</th>
      <th>Material type</th>
      <th>Series</th>
      <th>Series number</th>
      <th>Image url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author_last_name %></td>
        <td><%= book.author_first_name %></td>
        <td><%= book.isbn %></td>
        <td><%= book.publish_year %></td>
        <td><%= book.genre %></td>
        <td><%= book.reading_level %></td>
        <td><%= book.subject %></td>
        <td><%= book.language %></td>
        <td><%= book.length %></td>
        <td><%= book.material_type %></td>
        <td><%= book.series %></td>
        <td><%= book.series_number %></td>
        <td><%= book.image_url %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

