<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Books</h1>

  <% if @books.blank? %>
    <p>No books matched your search for '<%= @search_term %>'.</p>
    <%= link_to 'Back', books_path, class: 'btn btn-secondary' %>
  <% else %>
  <p><%= @books.as_json.count %> books matched your search for '<%= @search_term %>'.</p>
  <%= render partial: 'layouts/book_table', locals: { books: @books } %>
  <% end %>
</div>
