<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Books</h1>

  <% if @books.blank? %>
    <p>No books matched your search for '<%= @search_term %>'.</p>
    <%= link_to 'Back', books_path, class: 'btn btn-secondary' %>
  <% else %>
  <p><%= @books.count %> books matched your search for '<%= @search_term %>'.</p>
  <table class="table table-striped table-condensed datatable">
    <thead>
      <tr>
        <th>Image url</th>
        <th>Title</th>
        <th>Author last name</th>
        <th>Author first name</th>
        <th>Isbn</th>
        <th>Publish year</th>
        <th>Genre</th>
        <th>Length</th>
        <th>Material type</th>
        <th>Series</th>
        <th>Series number</th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= image_tag book.image_url, size: '30' %></td>
          <td><%= book.title %></td>
          <td><%= book.author_last_name %></td>
          <td><%= book.author_first_name %></td>
          <td><%= book.isbn %></td>
          <td><%= book.publish_year %></td>
          <td><%= book.genre %></td>
          <td><%= book.length %></td>
          <td><%= book.material_type %></td>
          <td><%= book.series %></td>
          <td><%= book.series_number %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <% end %>
</div>
