  <div class="form-group">
    <%= f.label :due_date %>
    <%= f.datetime_select :due_date, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :date_returned %>
    <%= f.datetime_select :date_returned, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :renewed_count %>
    <%= f.number_field :renewed_count, class: 'form-control' %>
