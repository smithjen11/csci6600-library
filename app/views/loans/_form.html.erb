  <div class="form-group">
    <%= f.label :overdue %>
    <%= f.check_box :overdue, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :fine %>
    <%= f.text_field :fine, class: 'form-control' %>
  </div>

