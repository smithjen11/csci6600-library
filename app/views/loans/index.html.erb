<div class="container">
<p id="notice"><%= notice %></p>

<h1>Loans</h1>

<table class="datatable">
  <thead>
    <tr>
      <th>Book</th>
      <th>User</th>
      <th>Date borrowed</th>
      <th>Due date</th>
      <th>Date returned</th>
      <th>Renewed count</th>
      <th>Overdue</th>
      <th>Fine</th>
      <th>Fine paid date</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @loans.each do |loan| %>
      <tr>
        <td><%= loan.book %></td>
        <td><%= loan.user %></td>
        <td><%= loan.date_borrowed %></td>
        <td><%= loan.due_date %></td>
        <td><%= loan.date_returned %></td>
        <td><%= loan.renewed_count %></td>
        <td><%= loan.overdue %></td>
        <td><%= loan.fine %></td>
        <td><%= loan.fine_paid_date %></td>
        <td><%= link_to 'Show', loan %></td>
        <td><%= link_to 'Edit', edit_loan_path(loan) %></td>
        <td><%= link_to 'Destroy', loan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Loan', new_loan_path %>
</div>
